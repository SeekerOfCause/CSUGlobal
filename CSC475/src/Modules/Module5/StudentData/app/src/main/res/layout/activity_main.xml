<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Material3.Light.NoActionBar">

    <TextView
        android:id="@+id/student_data_title"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/first_name_title"
        android:layout_width="166dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/first_name_input_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_data_title" />

    <EditText
        android:id="@+id/first_name_input"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:hint="@string/first_name_input_hint"
        android:inputType="text"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/first_name_title"
        app:layout_constraintTop_toBottomOf="@+id/first_name_title" />

    <TextView
        android:id="@+id/last_name_title"
        android:layout_width="166dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/last_name_input_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/first_name_input"
        app:layout_constraintTop_toBottomOf="@+id/first_name_input" />

    <EditText
        android:id="@+id/last_name_input"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="@string/last_name_input_hint"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/last_name_title"
        app:layout_constraintTop_toBottomOf="@+id/last_name_title" />

    <TextView
        android:id="@+id/grade_input_title"
        android:layout_width="143dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/grade_input_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/last_name_input"
        app:layout_constraintTop_toBottomOf="@+id/last_name_input" />

    <EditText
        android:id="@+id/grade_input_entry"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/grade_input_hint"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/grade_input_title"
        app:layout_constraintTop_toBottomOf="@+id/grade_input_title" />

    <TextView
        android:id="@+id/student_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/id_input_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/grade_input_entry"
        app:layout_constraintTop_toBottomOf="@+id/grade_input_entry" />

    <EditText
        android:id="@+id/id_input_entry"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/id_input_hint"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/student_id_title"
        app:layout_constraintTop_toBottomOf="@+id/student_id_title" />

    <Button
        android:id="@+id/add_data_button"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:text="@string/add_data_button"
        app:layout_constraintStart_toStartOf="@+id/id_input_entry"
        app:layout_constraintTop_toBottomOf="@+id/id_input_entry" />

    <Button
        android:id="@+id/view_all_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/view_all_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/add_data_button"
        app:layout_constraintTop_toTopOf="@+id/add_data_button" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/update_button"
        app:layout_constraintStart_toStartOf="@+id/add_data_button"
        app:layout_constraintTop_toBottomOf="@+id/add_data_button" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/update_button"
        app:layout_constraintTop_toBottomOf="@+id/view_all_button" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="165dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_button"
        app:layout_constraintVertical_bias="0.007">

        <androidx.cardview.widget.CardView
            android:id="@+id/student_information_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>